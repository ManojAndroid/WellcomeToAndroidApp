<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<script type="text/javascript">
	function draw() {
		var myCanvas = document.getElementById("myCanvas");
		var ctx = myCanvas.getContext("2d");
		ctx.fillRect(20, 20, 100, 100);
		ctx.strokeRect(10, 10, 120, 120);
		ctx.clearRect(45, 45, 50, 50);
		ctx.fillStyle = "green";
		ctx.closePath(); 
		ctx.fill();
	}
	function drawShape() {
		var myCanvas = document.getElementById("myCan");
		var ctx = myCanvas.getContext("2d");
		 //Begin our drawing
        ctx.beginPath();
        ctx.moveTo(75,0);
        ctx.lineTo(150,100);
        ctx.lineTo(75, 200);
        ctx.lineTo(0,100);
         
        //Define the style of the shape
        ctx.lineWidth = 5;
        ctx.fillStyle = "red";
        ctx.strokeStyle = "black";
        //Close the path
        ctx.closePath();
         
        //Fill the path with ourline and color
        ctx.fill();
        ctx.stroke();
	}
	  var canvas;
      var ctx;
      var x = 568;
      var y = 262;
      var mx = 2;
      var my = 4;
      var WIDTH = 568;
      var HEIGHT = 262;

function circle(x,y,r) {
ctx.beginPath();
ctx.arc(x, y, r, 0, Math.PI*2, true);
ctx.fill();
}

function clear() {
ctx.clearRect(0, 0, WIDTH, HEIGHT);
}

function init() {
canvas = document.getElementById("my");
ctx = canvas.getContext("2d");
return setInterval(draw, 10);
}

function draw() {
clear();
circle(x, y, 20);

if (x + mx > WIDTH || x + mx < 0)
mx = -mx;
if (y + my > HEIGHT || y + my < 0)
my = -my;

x += mx;
y += my;

}

init();
</script>
</head>
<body onload="draw()">
	<canvas id="myCanvas" width="300" height="300">
                </canvas>


	<canvas id="myCan" width="300" height="300" onmouseleave="drawShape()">
                </canvas>
	<canvas id="my" width="568" height="262">
                        <!-- Insert fallback content here -->
            Sorry, your browser doesn't support canvas technology
                </canvas>

</body>

</html>